<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.administrator.myapplication.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/nlogo" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IP地址"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/IP"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="192.168.7.1" />

        <TextView
            android:id="@+id/textView_port"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="端口"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/port"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="1001" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/connect"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_button"
            android:text="连接"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/disconnect"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_button"
            android:enabled="false"
            android:text="断开"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="压力1"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pressure1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="压力2"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pressure2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="压力3"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pressure3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:inputType="none"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="压力4"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pressure4"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:inputType="none"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="压力5"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pressure5"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="压力6"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pressure6"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:background="@drawable/bg_button"
            android:text="查看曲线"
            android:textColor="#ffffff" />
    </TableRow>

</TableLayout>
